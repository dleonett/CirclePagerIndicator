<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.customview.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.daniel.customview.CirclesIndicator
        android:id="@+id/circlesIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        app:circleColorSelected="@color/colorAccent"
        app:circleColorUnselected="@color/colorPrimary"
        app:circleSizeSelected="@dimen/circle_indicator_selected"
        app:circleSizeUnselected="@dimen/circle_indicator_unselected" />

</RelativeLayout>